<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:id="@+id/cv_itemDet"
    android:layout_width="160dp"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:elevation="10dp"
    android:clickable="true"
    app:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_itemG"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="5dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/tv_tokoG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warung Cak Khoirul"
        android:textAlignment="center"
        android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_hargaG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp.4000,-"
            android:textAlignment="center"
            android:textColor="#3F51B5"/>

        <TextView
            android:id="@+id/btn_ambil"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner3"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="Ambil"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
