<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JualMinyakActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/large"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>
    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/new_stock"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:focusedByDefault="false"
        android:background="@drawable/corner2"
        android:hint="Jumlah Stock"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000"
        android:id="@+id/new_harga"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:focusedByDefault="false"
        android:background="@drawable/corner2"
        android:hint="Harga"/>
    <EditText
        android:id="@+id/new_lokasi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:focusedByDefault="false"
        android:background="@drawable/corner2"
        android:hint="Lokasi"
        android:drawableRight="@drawable/ic_add_location_black_24dp"
        android:paddingRight="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/blue"
            android:elevation="10dp"
            android:clickable="true"
            android:shadowColor="#000"
            android:textColor="#fff"
            android:text="Simpan"/>
        <Button
            android:id="@+id/btn_batal"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:shadowColor="#000"
            android:layout_marginRight="20dp"
            android:background="#FF0000"
            android:elevation="10dp"
            android:clickable="true"
            android:textColor="#fff"
            android:text="Batal"/>
    </LinearLayout>
  </LinearLayout>
 </ScrollView>
</RelativeLayout>