<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bganyar"
    tools:context=".DetailActivity">
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/appbarDetail"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/large"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_backdetil"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back_black_24dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waste Oil"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginRight="100dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
<ImageView
    android:layout_below="@id/appbarDetail"
    android:id="@+id/iv_gambarDetail"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="1dp"
    android:background="#fff"
    android:elevation="10dp"
    android:src="@drawable/gambar2"/>
<TextView
    android:id="@+id/tv_tokoDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Warung Cak Khoirul"
    android:layout_below="@id/iv_gambarDetail"
    android:textColor="#000"
    android:layout_margin="10dp"
    android:textSize="18dp"
    android:textStyle="bold"
    />
    <TextView
        android:id="@+id/tv_hargaDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp. 4.000,-"
        android:layout_below="@id/tv_tokoDetail"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_literDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Liter"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_hargaDetail"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        />
    <TextView
        android:id="@+id/tv_statusDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tersedia"
        android:padding="2dp"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_hargaDetail"
        android:layout_toRightOf="@id/tv_literDetail"
        android:background="@drawable/corner6"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/tv_lokasiDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOKASI"
        android:padding="2dp"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_below="@id/tv_literDetail"
        android:textColor="#000"/>

    <WebView
        android:id="@+id/web_mapsDetail"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/tv_lokasiDetail"
        />
    </RelativeLayout>
     </ScrollView>
</RelativeLayout>